{
  "compilerOptions": {
    "target": "ES2019",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "outDir": "dist",
    "esModuleInterop": true,
    "module": "ESNext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts", "scripts/generate-folder-structure.js", "scripts/generate-folder-structure.esm", "scripts/generate-folder-structure.js", "scripts/generate-folder-structure.mjs", "scripts/toJsonSchema.ts", "scripts/generate_search_params.ts", "db/schema/**/*.ts"],
  "exclude": ["node_modules"]
}
